{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "markers": {
                "type": "array",
                "items": { "type": "string", "pattern": "^[\\w\\d_]+$" }
            },
            "replace-with": { "type": "string" },
            "recursive": { "type": "boolean" }
        },
        "required": ["markers", "replace-with"],
        "additionalProperties": false
    }
}
